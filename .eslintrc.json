{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Game": "writable",
    "PlaySound": "readonly",
    "l": "readonly"
  },
  "ignorePatterns": ["dist/*", "node_modules/*"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "func-names": "off", // To allow unnamed arrow functions
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
